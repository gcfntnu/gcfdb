rule mircarta_gff:        
    params:
        url = join(MIRCARTA_URL, '{}.gff3'.format(MIR_ORG[ORG]))
    output:
        join(MIRCARTA_EXT, 'genes', 'genes.gff3')
    shell:
        'wget -O- {params.url}  > {output}'
        
