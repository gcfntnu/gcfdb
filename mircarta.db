rule mircarta_all:
    input:
        join(MIRCARTA_EXT, 'fasta', 'hairpin.fa'),
        join(MIRCARTA_EXT, 'fasta', 'mature.fa'),
        join(MIRCARTA_EXT, 'genes', 'genes.gff3'),
        join(MIRCARTA_EXT, 'logs', 'hairpin.log'),
        join(MIRCARTA_EXT, 'logs', 'mature.log'),
        join(MIRCARTA_EXT, 'logs', 'gff.log')
