#-*- mode:snakemake -*-
"""UCSC data

"""

UCSC_ORG = {'homo_sapiens': 'Human',
            'mus_musculus': 'Mouse'}

rule ucsc_rmsk:
    output:
        join(EXT_DIR, 'ucsc', ORG, 'genes', 'rmsk.gtf')
    params:
        script = srcdir('scripts/ucsc_rmsk.py'),
        org = UCSC_ORG[ORG]
    shell:
        'python {params.script} {params.org} > {output}'
